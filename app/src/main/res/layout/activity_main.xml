<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jayseeofficial.camelcuproller.MainActivity">

    <View
        android:id="@+id/center_point"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/blue_die"
        android:layout_width="@dimen/die_size"
        android:layout_height="@dimen/die_size"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:layout_toLeftOf="@+id/center_point"
        android:layout_toStartOf="@+id/center_point"
        android:background="@color/material_blue700"
        android:gravity="center"
        android:textSize="@dimen/die_text_size"
        tools:text="1" />

    <TextView
        android:id="@+id/green_die"
        android:layout_width="@dimen/die_size"
        android:layout_height="@dimen/die_size"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:layout_toEndOf="@+id/center_point"
        android:layout_toRightOf="@+id/center_point"
        android:background="@color/material_greenA700"
        android:gravity="center"
        android:textSize="@dimen/die_text_size"
        tools:text="1" />

    <TextView
        android:id="@+id/orange_die"
        android:layout_width="@dimen/die_size"
        android:layout_height="@dimen/die_size"
        android:layout_below="@id/blue_die"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@color/material_orange700"
        android:gravity="center"
        android:textSize="@dimen/die_text_size"
        tools:text="1" />

    <TextView
        android:id="@+id/white_die"
        android:layout_width="@dimen/die_size"
        android:layout_height="@dimen/die_size"
        android:layout_below="@id/blue_die"
        android:layout_margin="16dp"
        android:layout_toLeftOf="@id/orange_die"
        android:background="@drawable/back"
        android:gravity="center"
        android:textSize="@dimen/die_text_size"
        tools:text="1" />

    <TextView
        android:id="@+id/yellow_die"
        android:layout_width="@dimen/die_size"
        android:layout_height="@dimen/die_size"
        android:layout_below="@id/green_die"
        android:layout_margin="@dimen/die_margins"
        android:layout_toRightOf="@id/orange_die"
        android:background="@color/material_yellow700"
        android:gravity="center"
        android:textSize="@dimen/die_text_size"
        tools:text="1" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Reset dice"
        android:textSize="@dimen/button_text_size" />

    <Button
        android:id="@+id/btn_roll_die"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_reset"
        android:text="Roll a\n die!"
        android:textSize="@dimen/button_text_size" />


</RelativeLayout>
